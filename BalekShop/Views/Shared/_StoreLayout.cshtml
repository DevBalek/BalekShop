@using BalekShop.Repositories.Language;
@inject LanguageService language
<!DOCTYPE html>
<html lang="en">
<head>
	<title>Book Store</title>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="format-detection" content="telephone=no">
	<meta name="apple-mobile-web-app-capable" content="yes">
	<meta name="author" content="">
	<meta name="keywords" content="">
	<meta name="description" content="">

	<link rel="stylesheet" type="text/css" href="~/booksaw-template/css/normalize.css">
	<link rel="stylesheet" type="text/css" href="~/booksaw-template/icomoon/icomoon.css">
	<link rel="stylesheet" type="text/css" href="~/booksaw-template/css/vendor.css">
	<link rel="stylesheet" type="text/css" href="~/booksaw-template/style.css">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
	<!-- script
	================================================== -->
	<script src="~/booksaw-template/js/modernizr.js"></script>

</head>

<body>


	<div id="header-wrap">

		<div class="top-content">
			<div class="container">
				<div class="row">
					<div class="col-md-3">
						<div class="left-element">							
							<div class="main-logo">
								<a href="/User/Store"><img src="~/img/balekshop-logo.png" alt="logo"></a>
							</div>								
						</div><!--social-links-->
					</div>

					<div class="col-md-9">						
						<div class="right-element">														
							<div class="action-menu">
								<a href="/User/Cart" class="nav-link"><i class="bi bi-basket3"></i> @language.Getkey("cart")</a>
							</div>

							@if(User.IsInRole("Admin")){
								<div class="action-menu">
									<a href="/Admin/Get" class="nav-link"><i class="bi bi-clipboard2-data"></i> @language.Getkey("admin-panel")</a>
								</div>
							}
							
							@if (User.IsInRole("User"))
							{
								<div class="action-menu">
									<a href="/User/Account" class="nav-link"><i class="bi bi-person-bounding-box"></i> @language.Getkey("account")</a>
								</div>
							}

							@if (User.Identity.IsAuthenticated)
							{
								<div class="action-menu">
									<a href="/User/Logout" class="nav-link"><i href="/User/Logout" class="bi bi-box-arrow-in-left"></i> @language.Getkey("logout")</a>
								</div>								
							}
							else
							{
								<div class="action-menu">
									<a href="/User/Login" class="nav-link"><i class="bi bi-person-bounding-box"></i> @language.Getkey("login")</a>
								</div>
							}
						</div><!--top-right-->
					</div>

				</div>
			</div>
		</div><!--top-content-->
	</div><!--header-wrap-->

	
	@RenderBody()

	<footer id="footer">
		
	</footer>

	<div id="footer-bottom">
		<div class="container">
			<div class="row">
				<div class="col-md-12">		
					
					<div class="col-md-3">
						<div class="left-element">
							<div class="main-logo">
								<a href="/User/Store"><img src="~/img/balekshop-logo.png" alt="logo"></a>
							</div>
						</div><!--social-links-->
					</div>
					<div class="col-md-9">					
						<div class="copyright">
							<div class="row">

								<div class="col-md-6">
									<p>© 2022 @language.Getkey("all-rights-reserved") - BalekShop </p>
								</div>

								<div class="col-md-6">
									<div class="social-links align-right">
										<ul>											
											<li>
												<a href="#"><i class="icon icon-facebook"></i></a>
											</li>
											<li>
												<a href="#"><i class="icon icon-twitter"></i></a>
											</li>
											<li>
												<a href="#"><i class="icon icon-youtube-play"></i></a>
											</li>
											<li>
												<a href="#"><i class="icon icon-behance-square"></i></a>
											</li>
										</ul>
									</div>

								</div>
							</div>
							<div class="row">
								<div class="col-md-6">									
								</div>

								<div class="col-md-12">
									<div class="social-links align-right">
										<ul>
											<li><a asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="en-US" class="nav-link"><i class="flag-icon flag-icon-gb"></i> English</a></li>

											<li><a asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="tr-TR" class="nav-link"><i class="flag-icon flag-icon-tr"></i> Türkçe</a></li>

											<li><a asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="es" class="nav-link"><i class="flag-icon flag-icon-gb"></i> Spanish</a></li>

											<li><a asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="fr" class="nav-link"><i class="flag-icon flag-icon-tr"></i> French</a></li>

											<li><a asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="it" class="nav-link"><i class="flag-icon flag-icon-gb"></i> Italian</a></li>

											<li><a asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="ja" class="nav-link"><i class="flag-icon flag-icon-tr"></i> Japanese</a></li>

											<li><a asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="ru" class="nav-link"><i class="flag-icon flag-icon-gb"></i> Russian</a></li>

											<li><a asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="ko" class="nav-link"><i class="flag-icon flag-icon-tr"></i> Korean</a></li>

											<li><a asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="ar" class="nav-link"><i class="flag-icon flag-icon-gb"></i> Arabic</a></li>

										</ul>
									</div>

								</div>
								
							</div>
						</div><!--grid-->
					</div>
				</div><!--footer-bottom-content-->
			</div>
		</div>
	</div>

	<script src="js/jquery-1.11.0.min.js"></script>
	<script src="js/plugins.js"></script>
	<script src="js/script.js"></script>

</body>
</html>	