@using BalekShop.Repositories.Language;
@model IEnumerable<User>
@{
}
@inject LanguageService language;

<div class="container pt-3">    
    <div class="row">
        <div class="col-md-6">
            <h3>@language.Getkey("user")</h3>
            <table  class="table table-stripped table-bordered table-light">
                <thead>
                    <tr>
                        <th>@language.Getkey("edit")</th>
                        <th>@language.Getkey("username")</th>
                        <th>@language.Getkey("email")</th>
                        <th>@language.Getkey("delete")</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model){
                    <tr>
                        <td>
                                <a class="btn btn-primary" href="/User/Update?id=@item.Id"><i class="bi bi-pencil-square"></i></a>
                        </td>
                            <td>@item.UserName</td>
                            <td>@item.Email</td>                            
                        <td>                                
                            <a class="btn btn-outline-danger" onclick="return window.confirm('Are you sure?')" href="/user/Delete?id=@item.Id"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <a class="btn btn-success" href="/User/Add">@language.Getkey("new") @language.Getkey("user")</a>
        </div>
    </div>
</div>

