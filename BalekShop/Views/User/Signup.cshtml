@model User
@{
    Layout = "_StoreLayout";
}
@using BalekShop.Repositories.Language;
@inject LanguageService language;


<!------ Include the above in your HEAD tag ---------->

<div class="container login-container">
    <div class="row">       
        <div class="col-md-6 login-form-2">
            <h2>@language.Getkey("signup")</h2>
            @if (TempData["msg"] != null)
            {
                <div class="form-group">
                    @TempData["msg"]
                </div>
            }
            <form asp-action="Signup" method="POST">
                <div class="form-group">
                    <label asp-for="UserName">@language.Getkey("username")</label>
                    <input type="text" class="form-control" asp-for="UserName" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">@language.Getkey("password")</label>
                    <input type="password" class="form-control" asp-for="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email">@language.Getkey("email")</label>
                    <input type="email" class="form-control" asp-for="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Adress">@language.Getkey("adress")</label>
                    <input style="height:100" type="text" class="form-control" asp-for="Adress" />
                    <span asp-validation-for="Adress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" class="btnSubmit" value="@language.Getkey("signup")" />
                </div>
                <a href="/User/Login">@language.Getkey("already-have-account")</a>
            </form>               
        </div>
    </div>
</div>