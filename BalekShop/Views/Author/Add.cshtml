@model BalekShop.Models.Domain.Author
@{
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3>Add Author</h3>
            <form asp-action="Add" method="post">
                <div class="form-group">
                    <label asp-for="AuthorName">AuthorName *</label>
                    <input type="text" class="form-control" asp-for="AuthorName" />
                    <span asp-validation-for="AuthorName" class="text-danger"></span>
                </div>

                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        @TempData["msg"]
                    </div>
                }
                <div class="form-group pt-3">
                    <a href="/Author/Get" class="btn btn-primary"> <i class="bi bi-card-list"></i> List</a>
                    <button type="submit" class="btn btn-outline-success"><i class="bi bi-cloud-arrow-up-fill"></i> Save</button>
                </div>

            </form>
        </div>
    </div>
</div>

