@using BalekShop.Models;
@using BalekShop.Repositories.Language;
@model Admin;
@{
}
@using BalekShop.Repositories.Language;
@inject LanguageService language;

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3>@language.Getkey("new") @language.Getkey("admin")</h3>
            <form asp-action="Add" method="post">
                <div class="form-group">
                    <label asp-for="Email">@language.Getkey("email") *</label>
                    <input type="email" class="form-control" asp-for="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password">@language.Getkey("password") *</label>
                    <input type="password" class="form-control" asp-for="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                
                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        @TempData["msg"]
                    </div>
                }
                <div class="form-group pt-3">
                    <a href="/Admin/Get" class="btn btn-primary"> <i class="bi bi-card-list"></i> @language.Getkey("list")</a>
                    <button type="submit" class="btn btn-outline-success"><i class="bi bi-cloud-arrow-up-fill"></i> @language.Getkey("add")</button>
                </div>

            </form>
        </div>
    </div>
</div>

