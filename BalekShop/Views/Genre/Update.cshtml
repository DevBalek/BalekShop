@model Genre
@{
}
@using BalekShop.Repositories.Language;
@inject LanguageService language;


<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3>@language.Getkey("update") @language.Getkey("genre")</h3>
            <form asp-action="Update" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name">@language.Getkey("name") *</label>
                    <input type="text" class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        @language.Getkey(@TempData["msg"].ToString())
                    </div>
                }
                <div class="form-group pt-3">
                    <a href="/Genre/Get" class="btn btn-primary"> <i class="bi bi-card-list"></i> @language.Getkey("list")</a>
                    <button type="submit" class="btn btn-outline-success"><i class="bi bi-cloud-arrow-up-fill"></i> @language.Getkey("save")</button>
                </div>

            </form>
        </div>
    </div>
</div>

