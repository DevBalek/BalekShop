@model IEnumerable<BalekShop.Models.Domain.Genre>
@{
}

<div class="container pt-3">
    
    <div class="row">
        <div class="col-md-4">
            <h3>Genres</h3>
            <table  class="table table-stripped table-bordered table-light">
                <thead>
                    <tr>
                        <th>Edit</th>
                        <th>Name</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model){                        
                    <tr>
                        <td>
                            <a class="btn btn-primary" href="/Genre/Update?id=@item.Id"><i class="bi bi-pencil-square"></i></a>
                        </td>
                        <td>@item.Name</td>
                        <td>                                
                            <a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/Genre/Delete?id=@item.Id"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-success" href="/Genre/Add">New Genre</a>
        </div>
    </div>
</div>

